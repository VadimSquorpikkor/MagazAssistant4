<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="my_base_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="base_center" parent="my_base_style">
        <item name="android:gravity">center</item>
    </style>

    <style name="base_right" parent="my_base_style">
        <item name="android:gravity">right</item>
    </style>

    <style name="vertical" parent="my_base_style">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="horizontal" parent="my_base_style">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="outer_block" parent="my_base_style">
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/my_shape</item>
    </style>

</resources>
