<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/outer_block">

    <LinearLayout style="@style/inner_block">

        <LinearLayout style="@style/horizontal">

            <LinearLayout style="@style/horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/order_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Имя"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/order_item_surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Фамилия" />
            </LinearLayout>

            <ImageView
                style="@style/visibility_button"
                android:gravity="end" />
        </LinearLayout>

        <com.squorpikkor.app.magazassistant4.MyGridView
            android:id="@+id/customers_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="1"
            android:verticalSpacing="1dp">

        </com.squorpikkor.app.magazassistant4.MyGridView>
    </LinearLayout>
</LinearLayout>
