<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PricesFragment">

    <LinearLayout style="@style/vertical">

        <TextView style="@style/base_center"
            android:text="Рассчитать цены и колличество" />

        <TextView style="@style/base_center"
            android:text="Количество людей:" />

        <LinearLayout style="@style/horizontal">

            <LinearLayout style="@style/vertical"
                android:layout_weight="1">

                <TextView style="@style/base_center"
                    android:text="Корелин 1-й корпус"/>
                <TextView style="@style/base_center"
                    android:text="Монтажный участок"/>
                <TextView style="@style/base_center"
                    android:text="Сборочный участок"/>
                <TextView style="@style/base_center"
                    android:text="Праневич"/>
                <TextView style="@style/base_center"
                    android:text="Цокольный этаж"/>
                <TextView style="@style/base_center"
                    android:text="Монтаж 1-й этаж"/>

            </LinearLayout>

            <LinearLayout style="@style/vertical"
                android:layout_weight="3">

                <TextView style="@style/base_center"
                    android:text="12" />
                <TextView style="@style/base_center"
                    android:text="5" />
                <TextView style="@style/base_center"
                    android:text="7" />
                <TextView style="@style/base_center"
                    android:text="2" />
                <TextView style="@style/base_center"
                    android:text="2" />
                <TextView style="@style/base_center"
                    android:text="3" />

            </LinearLayout>

            <LinearLayout style="@style/vertical"
                android:layout_weight="3"
                android:layout_gravity="center_vertical|center_horizontal">
                <TextView style="@style/base_center"
                    android:text="Всего:" />
                <TextView style="@style/base_center"
                    android:text="33"
                    android:padding="0dp"
                    android:textSize="40sp"
                    android:textColor="@color/colorOrange"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
