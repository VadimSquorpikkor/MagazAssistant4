<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PricesFragment">

    <LinearLayout style="@style/vertical" android:elevation="1dp">

        <TextView style="@style/orange_title" android:text="Рассчитать цены и количество соков"/>

        <LinearLayout style="@style/outer_block" android:elevation="10dp">

            <LinearLayout style="@style/inner_block">

                <RelativeLayout style="@style/horizontal">

                    <TextView
                        style="@style/base_center"
                        android:layout_marginBottom="5dp"
                        android:text="Количество людей:"
                        android:textSize="15sp" />

                    <ImageView
                        style="@style/edit_button"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:id="@+id/open_customers"/>

                </RelativeLayout>

                <LinearLayout style="@style/horizontal">

                    <ListView
                        android:id="@+id/main_window_department_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:divider="@null"
                        android:dividerHeight="0dp"/>

                    <LinearLayout
                        style="@style/vertical"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_weight="5">

                        <TextView
                            style="@style/base_center"
                            android:text="Всего:" />

                        <TextView
                            style="@style/base_center"
                            android:padding="0dp"
                            android:text="33"
                            android:textColor="@color/colorOrange"
                            android:textSize="40sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    style="@style/horizontal"
                    android:gravity="center"
                    android:layout_marginTop="5dp">

                    <TextView
                        style="@style/base_center"
                        android:paddingRight="10dp"
                        android:layout_width="wrap_content"
                        android:text="Количество раболчих дней:"
                        android:textColor="@color/colorOrange" />

                    <ImageView style="@style/remove_button" />

                    <TextView
                        style="@style/small_edit"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="5" />

                    <ImageView style="@style/add_button" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout style="@style/outer_block" android:elevation="10dp">

            <LinearLayout style="@style/inner_block">

                <TextView
                    style="@style/base_center"
                    android:layout_marginBottom="5dp"
                    android:text="Цены на соки:"
                    android:textSize="15sp" />


                <LinearLayout style="@style/horizontal">

                    <LinearLayout
                        style="@style/vertical"
                        android:layout_weight="1">

                        <TextView
                            style="@style/base_center"
                            android:text="Сок 1 литр" />

                        <TextView
                            style="@style/base_center"
                            android:text="Сок 0,25 л" />

                        <TextView
                            style="@style/base_center"
                            android:text="Молоко 1 л" />

                        <TextView
                            style="@style/base_center"
                            android:text="Молоко 0,25 л" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/vertical"
                        android:layout_weight="2">

                        <EditText
                            style="@style/small_edit"
                            android:text="2" />

                        <EditText
                            style="@style/small_edit"
                            android:text="0,5" />

                        <EditText
                            style="@style/small_edit"
                            android:text="1" />

                        <EditText
                            style="@style/small_edit"
                            android:text="0,25" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/outer_block" android:elevation="10dp">

            <LinearLayout style="@style/inner_block">

                <RelativeLayout style="@style/horizontal">

                    <TextView
                        style="@style/base_center"
                        android:layout_marginBottom="5dp"
                        android:text="Посчитать соки:"
                        android:textSize="15sp" />

                    <ImageView
                        style="@style/edit_button"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp" />

                </RelativeLayout>

                <LinearLayout
                    style="@style/horizontal"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        style="@style/vertical"
                        android:layout_weight="1">

                        <TextView
                            style="@style/base_center"
                            android:text="Соков в накладной:"
                            android:textColor="@color/colorOrange" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/vertical"
                        android:layout_weight="2">

                        <EditText
                            style="@style/small_edit"
                            android:text="25" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout style="@style/horizontal">

                    <LinearLayout
                        style="@style/vertical"
                        android:layout_weight="1">

                        <TextView
                            style="@style/base_center"
                            android:text="Сок 1 литр" />

                        <TextView
                            style="@style/base_center"
                            android:text="Сок 0,25 л" />

                        <TextView
                            style="@style/base_center"
                            android:text="Молоко 1 л" />

                        <TextView
                            style="@style/base_center"
                            android:text="Молоко 0,25 л" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/vertical"
                        android:layout_weight="2">

                        <EditText
                            style="@style/small_edit"
                            android:text="25" />

                        <EditText
                            style="@style/small_edit"
                            android:text="0" />

                        <EditText
                            style="@style/small_edit"
                            android:text="50" />

                        <EditText
                            style="@style/small_edit"
                            android:text="0" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    style="@style/horizontal"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        style="@style/vertical"
                        android:layout_weight="1">

                        <TextView
                            style="@style/base_center"
                            android:text="Денег в накладной:"
                            android:textColor="@color/colorOrange" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/vertical"
                        android:layout_weight="2">

                        <EditText
                            style="@style/small_edit"
                            android:text="100" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
