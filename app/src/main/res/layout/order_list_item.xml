<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/outer_block">

    <LinearLayout
        style="@style/inner_block"
        android:padding="0dp">

        <LinearLayout
            style="@style/horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                style="@style/horizontal"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/order_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Имя" />

                <TextView
                    android:id="@+id/order_item_surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Фамилия" />
            </LinearLayout>

            <LinearLayout
                style="@style/horizontal"
                android:layout_width="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Денег: " />

                <TextView
                    android:id="@+id/order_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="2.5"
                    android:textColor="@color/colorOrange" />

            </LinearLayout>

            <TextView
                android:id="@+id/add_juice_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/my_add_button_shape"
                android:elevation="5dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="+"
                android:textSize="20sp" />

            <LinearLayout
                style="@style/horizontal"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="right">


                <ImageView
                    style="@style/delete_button"
                    android:gravity="end"
                    android:layout_marginEnd="20dp"/>
                <ImageView
                    style="@style/visibility_button"
                    android:gravity="end"
                    android:layout_marginEnd="10dp"/>
            </LinearLayout>

        </LinearLayout>

        <com.squorpikkor.app.magazassistant4.MyGridView
            android:id="@+id/current_order_product_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="1"
            android:verticalSpacing="1dp">

        </com.squorpikkor.app.magazassistant4.MyGridView>
    </LinearLayout>
</LinearLayout>
