<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/outer_block">

    <LinearLayout style="@style/inner_block">

        <LinearLayout style="@style/horizontal">

            <LinearLayout
                style="@style/horizontal"
                android:layout_width="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/order_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="Имя" />

                <TextView
                    android:id="@+id/order_item_surname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Фамилия" />
            </LinearLayout>

            <LinearLayout
                style="@style/horizontal"
                android:layout_width="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Денег: "/>

                <TextView
                    android:id="@+id/order_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.5"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/colorOrange"/>

            </LinearLayout>

            <LinearLayout
                style="@style/horizontal"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="right">

                <ImageView
                    style="@style/visibility_button"
                    android:gravity="end" />
            </LinearLayout>

        </LinearLayout>

        <com.squorpikkor.app.magazassistant4.MyGridView
            android:id="@+id/current_order_product_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="1"
            android:verticalSpacing="1dp">

        </com.squorpikkor.app.magazassistant4.MyGridView>
    </LinearLayout>
</LinearLayout>
