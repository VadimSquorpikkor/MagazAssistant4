<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="my_base_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="base_center" parent="my_base_style">
        <item name="android:gravity">center</item>
    </style>

    <style name="base_right" parent="my_base_style">
        <item name="android:gravity">right</item>
    </style>

    <style name="base_left" parent="my_base_style">
        <item name="android:gravity">left</item>
    </style>

    <style name="vertical" parent="my_base_style">
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="horizontal" parent="my_base_style">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="small_edit_text" parent="base_left">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">10sp</item>
<!--        <item name="android:padding">0dp</item>-->
        <!--        <item name="android:layout_margin">0dp</item>
                <item name="android:padding">0dp</item>
                <item name="android:paddingLeft">10dp</item>-->
    </style>

    <style name="small_edit_text2" parent="base_center">
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">10sp</item>
<!--        <item name="android:padding">0dp</item>-->
        <!--    <item name="android:layout_margin">0dp</item>
            <item name="android:padding">0dp</item>-->
    </style>

    <style name="outer_block" parent="vertical">
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/my_shape</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="inner_block" parent="vertical">
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/my_shape_dark</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="small_button">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="delete_button" parent="small_button">
        <item name="android:background">@drawable/baseline_delete_outline_white_48dp</item>
    </style>

    <style name="edit_button" parent="small_button">
        <item name="android:background">@drawable/baseline_build_white_48dp</item>
    </style>

    <style name="add_button" parent="small_button">
        <item name="android:background">@drawable/baseline_add_white_18dp</item>
    </style>

    <style name="remove_button" parent="small_button">
        <item name="android:background">@drawable/baseline_remove_white_18dp</item>
    </style>

    <style name="visibility_button" parent="small_button">
        <item name="android:background">@drawable/baseline_visibility_white_48dp</item>
    </style>

    <style name="add_to_cart_button" parent="small_button">
        <item name="android:background">@drawable/baseline_add_shopping_cart_white_48dp</item>
    </style>

    <style name="down_button" parent="small_button">
        <item name="android:background">@drawable/baseline_keyboard_arrow_down_white_48dp</item>
    </style>

    <style name="upp_button" parent="small_button">
        <item name="android:background">@drawable/baseline_keyboard_arrow_up_white_48dp</item>
    </style>

    <style name="small_edit" parent="base_center">
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="nice_button" parent="Widget.AppCompat.Button">

        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_shape_selector</item>
    </style>

    <style name="orange_title" parent="base_center">
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="small_orange_title" parent="base_center">
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="small_orange_title_w1" parent="base_center">
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="small_orange_title_w2" parent="base_center">
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="i_can_press">
        <item name="android:background">@drawable/background_shape_selector</item>
    </style>

</resources>
